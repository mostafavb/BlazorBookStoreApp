@page "/authors/"

<h3>Index</h3>

@if (response == null)
{
    <div class="alert alert-info">
        <h4>Loading data...</h4>
    </div>
}
else if (!response.Success)
{
    <div class="alert alert-warning">
        <h4>@response.Message</h4>
    </div>
}
else
{
    <a class="btn btn-secondary" href="/authors/create">&dagger; New Author</a>
    <br/>
    <table class ="table table-responsive">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in response.Data)
            {
                <tr>
                    <td>@author.FirstName</td>
                    <td>@author.LastName</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" href="/authors/detail"><span class="oi oi-grid-three-up" aria-hidden="true"></span></a>
                        <a class="btn btn-outline-warning btn-sm" href="/authors/edit/@author.Id"><span class="oi oi-pencil" aria-hidden="true"></span></a>
                        <a class="btn btn-outline-danger btn-sm" href="/authors/delete"><span class="oi oi-delete" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


