@page "/authors/create/"

@if (result != null)
{
    if (result.Success)
    {       
        <MudAlert Severity="Severity.Info">The author was fired up successfully</MudAlert>
    }
    else
    {
        <MudAlert Severity="Severity.Error"> @result.Message</MudAlert>        
    }
}

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Add New Author</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTextField @bind-Value="Author.FirstName" Label="First Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="Author.LastName" Label="Last Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField Lines="4" @bind-Value="Author.Bio" Label="Bio" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <br />
        <MudButton Variant="Variant.Filled" Color="Color.Surface" OnClick="BackToList">Back to list</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="HandleCreateAuthor">Save Author</MudButton>
    </MudCardContent>
</MudCard>

