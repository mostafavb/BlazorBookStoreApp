@page "/authors/edit/{id:int}"

@if (response == null)
{
    <MudAlert Severity="Severity.Info">
        <MudProgressCircular Size="Size.Small" Color="Color.Default" Indeterminate="true" />
        Loading data, please wait...
    </MudAlert>
}
else
{
    if (!response.Success)
    {
        <MudAlert Severity="Severity.Error">@response.Message</MudAlert>
    }
    else
    {
        <MudCard Elevation="25">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Edit Author</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudTextField @bind-Value="Author.FirstName" Label="First Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="Author.LastName" Label="Last Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField Lines="4" @bind-Value="Author.Bio" Label="Bio" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <br />
                <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="HandleEditAuthor">Save Author</MudButton>
            </MudCardContent>
        </MudCard>
    }
}
<br />
<MudButton Variant="Variant.Filled" Color="Color.Surface" OnClick="BackToList">Back to list</MudButton>

